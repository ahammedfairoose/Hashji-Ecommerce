<section>
    <div class="container mt-4">
        <div class="row">

            <div class="col-md-6">
                <h2 class="text-centre" style="text-align: center;">EDIT PRODUCT</h2>
                <form action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data">
  
    <label for="">Name</label>
    <input type="text" class="form-control" name="Name" value="{{product.Name}}">

    <label for="">Category</label>
    <input type="text" class="form-control" name="Category" value="{{product.Category}}">

    <label for="">Description</label>
    <input type="text" class="form-control" name="Description" value="{{product.Description}}">

    <label for="">Image</label>
    <img src="/product-images/{{product._id}}.jpg" alt="" style="width: 100px; height:auto" id="imgView" class="pt-3">
    <input type="file" class="form-control" name="Image" onchange="viewImage(event)" >
    <br><br>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
            </div>
        </div>
    </div>
</section>

<script>
    function viewImage(event){
        document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
    }
</script>